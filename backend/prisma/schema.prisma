generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Task {
  id        Int      @id @default(autoincrement())
  title     String
  completed Boolean  @default(false)
  priority  Priority @default(LOW)
  category  Category @default(OTHER)
}

enum Priority {
  LOW
  MEDIUM
  HIGH
}

enum Category {
  HOME
  WORK
  OTHER
}